# Environment Variables Example
# Copy this to .env.local for local development
# Configure these in Vercel dashboard for production

# REQUIRED: Backend API URL
NEXT_PUBLIC_API_URL=https://your-backend.onrender.com

# Optional: Alternative env var name for backend URL
NEXT_PUBLIC_BACKEND_URL=https://your-backend.onrender.com

# Optional: Build ID for deployment verification
NEXT_PUBLIC_BUILD_ID=v1.0.0

# REQUIRED: Stripe Publishable Key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here

# REQUIRED: Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
